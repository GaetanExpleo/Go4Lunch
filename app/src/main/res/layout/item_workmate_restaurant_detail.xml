<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_workmate_restaurant_detail_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="@string/workmate_picture_description" />

    <TextView
        android:id="@+id/item_workmate_restaurant_detail_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        tools:text="Workmate is joining!"
        app:layout_constraintStart_toEndOf="@id/item_workmate_restaurant_detail_image"
        app:layout_constraintTop_toTopOf="@id/item_workmate_restaurant_detail_image"
        app:layout_constraintBottom_toBottomOf="@id/item_workmate_restaurant_detail_image"/>

</androidx.constraintlayout.widget.ConstraintLayout>